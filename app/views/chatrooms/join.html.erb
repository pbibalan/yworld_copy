<% content_for :prescripts do %>
	<script src="http://maps.google.com/maps/api/js?sensor=false&libraries=geometry"></script>
	<script src="http://deepspace.yworld.com/site/js/libs/websocket.js"></script>

	
<% end %>

<div id="alert-box">

</div>

<form name="test" onsubmit='return false;' class="form-horizontal">
	<div class="row"> 
		<div class="span8 alert">
				<div class="control-group">
					<div class="control-label">
						UID 
					</div>
					<div class="controls">
						<%= text_field_tag :uid, current_user.uid %>
					</div>
				</div>
				<div class="control-group">
					<div class="control-label">
						Crypto
					</div>
					<div class="controls">
						<%= text_field_tag :crypto, current_user.crypto %>  
					
						<!-- <input type='button' id='hangup' value="Disconnect" class="btn btn-danger" %>> -->
					</div>
				</div>

				<div class="control-group">
					<div class="control-label">
						Latitude
					</div>
					<div class="controls">
						<%= text_field_tag :lat, 0 %>
					</div>
				</div>
				<div class="control-group">
					<div class="control-label">
						Longitude
					</div>
					<div class="controls">
						<%= text_field_tag :lng, 0 %>
					</div>
				</div>

				<div class="control-group">
					<div class="control-label">
						Collaboration ID
					</div>
					<div class="controls">
						<%= text_field_tag :cid, @chatroom.collaboration_id %><br/><br/>
						<%= link_to 'Disconnect',  chatrooms_path, id: 'hangup', class: "btn btn-danger" %>	
				<!-- 		<input type='button' id='hangup' value="Hangup on Collaboration" onclick="MyWebSocket.Hangup(document.test.cid.value);" class="btn btn-danger"> -->
					</div>
				</div>
	
		</div>
		<div class="span3 alert-success">
			<div class="span3">
			<h3> All Users </h3>
			<p>
				<div class"alert" id="user_list" >
					 <ul> </ul>
				</div>
			</p>
		</div>


		</div>
	</div>



	<div class="row" >
		<div id="main_bar" class="span8 well">
			<div class="row">
				<div class="control-group">
					<div class="control-label">
						New Message
					</div>
					<div class="controls">
						<input type="text" name="cmsg" length=30> 
						<input type='button' id='csend' value="Send to all" class="btn btn-primary">
					</div>
				</div>
			</div>
			<div class="row" >
				<div class="span6" id="chat_area">

				</div>

			</div>


			
			
		</div>
		<div id="side_bar" class="span3 well">
		<!--	<%= link_to 'Refresh Map', "#", id: 'refresh_map' %> -->
		<!-- 	<%= link_to 'Get  Online Contacts', "#", id: 'get_online' %> -->
			<div id="mapholder"></div>
			

		</div>
	</div>



</form>


